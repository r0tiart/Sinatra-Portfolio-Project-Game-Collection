<div class="text-center">
	<h3><u>New Character Form for <%=@game.title.split.collect{|word| word.capitalize}.join(" ")%></u></h3>

	<% if @missing == true %>
		<b>Can't leave any field blank, please try again</b>
	<%end%>
</div>

<form method="post" action="/users/<%=@user_profile.slug%>/<%=@game.slug%>/characters">
		
		Character Name: <input type="text" name="character[name]">
		<br><br>
		Character Class: <input type="text" name="character[klass]">
		<br><br>
		Character Level: <input type="text" name="character[level]">

		<br><br>

		<input type="submit" name="submit" value="Create Charcter">
</form>