<div class="text-center">
	<h3><u>New Game Form</u></h3>

	<% if @missing == true %>
	
		<b>Can't leave any field blank, please try again</b>
	<%end%>
</div>

<div class="text-md-left" > 

	<form method="post" action="/games">
		
		<br><br>

		<b>Game Title: &nbsp</b> <input type="text" name="game[title]">

		<br><br>

		<b>Publisher: &nbsp</b><input type="text" name="game[publisher]">

		<br><br>

		<b>Genre: &nbsp</b><input type="text" name="game[genre]">

		<br><br>
		<input type="submit" name="submit" value="Create Game">

	</form>

</div>
	